{
  "name": "google-forms-svelte",
  "version": "1.0.0-beta",
  "scripts": {
    "lint": "prettier --ignore-path .gitignore --check --plugin-search-dir=. . && eslint --ignore-path .gitignore .",
    "format": "prettier --ignore-path .gitignore --write --plugin-search-dir=. .",
    "clean": "rm -rf build",
    "dev": "npm run prepare-dev && svelte-kit dev",
    "build": "svelte-kit build",
    "preview": "svelte-kit preview",
    "prepare-dev": "cp .env.dev .env",
    "prepare-prod": "cp .env.prod .env",
    "compose": "npm run clean && npm run prepare-prod && npm run build && sudo docker-compose -f devops/docker-compose.yml up --build"
  },
  "devDependencies": {
    "@smui/button": "^6.0.0-beta.15",
    "@smui/card": "^6.0.0-beta.15",
    "@smui/checkbox": "^6.0.0-beta.15",
    "@smui/form-field": "^6.0.0-beta.15",
    "@smui/radio": "^6.0.0-beta.15",
    "@smui/textfield": "^6.0.0-beta.15",
    "@sveltejs/adapter-auto": "next",
    "@sveltejs/kit": "next",
    "@types/cookie": "^0.4.1",
    "@typescript-eslint/eslint-plugin": "^5.10.1",
    "@typescript-eslint/parser": "^5.10.1",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-svelte3": "^3.2.1",
    "prettier": "^2.5.1",
    "prettier-plugin-svelte": "^2.5.0",
    "svelte": "^3.46.0",
    "svelte-check": "^2.2.6",
    "svelte-preprocess": "^4.10.1",
    "tslib": "^2.3.1",
    "typescript": "~4.6.2"
  },
  "type": "module",
  "dependencies": {
    "@fontsource/fira-mono": "^4.5.0",
    "@lukeed/uuid": "^2.0.0",
    "@smui/circular-progress": "^6.0.0-beta.15",
    "@sveltejs/adapter-node": "^1.0.0-next.73",
    "cookie": "^0.4.1",
    "mongoose": "^6.2.8",
    "svelte-material-ui": "^6.0.0-beta.15"
  }
}
